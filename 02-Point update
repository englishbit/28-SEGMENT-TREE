#include<iostream>
using namespace std;
#define MAX 100000
int array[MAX];
int seg[2*MAX];

void update(int pos,int value,int n){
    pos=pos+n;
    seg[pos]=value;
    for(pos=pos/2;pos>0;pos=pos/2){
        seg[pos]=seg[pos*2]+seg[pos*2+1];

    }
}


int main(){
    int n;
    cin>>n;
    for(int i=0;i<n;i++){
        cin>>array[i];
    }
    
    for(int i=0;i<n;i++){
        seg[n+i]=array[i];
    }

    for(int i=n-1;i>0;i--){
        seg[i]=seg[i*2]+seg[(i*2)+1];
    }

    int pos,value;
    cin>>pos>>value;
    update(pos,value,n);


    return 0;
}